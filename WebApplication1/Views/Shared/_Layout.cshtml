<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Viz-a-technologies</title>
    <link href="~/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <script src="~/js/Chart.bundle.js"></script>
    <script src="~/js/utils.js"></script>
    
    <!--Azure media player-->
    <link href="//amp.azure.net/libs/amp/2.1.0/skins/amp-default/azuremediaplayer.min.css" rel="stylesheet">
    <script src="//amp.azure.net/libs/amp/2.1.0/azuremediaplayer.min.js"></script>
    <style>
        canvas {
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
        }
    </style>
</head>
<body onload="Dataupdate()">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-xs-4">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Viz-a-tech <span class="glyphicon glyphicon-cloud" aria-hidden="true"></span> Azure </a>
                </div>
                <div class="col-md-6 col-xs-4 text-center">
                    <form class="navbar-form">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="button">
                                    <span class="glyphicon glyphicon-search" arisa-hidden="true"></span>
                                </button>
                            </span>
                        </div><!-- /input-group -->
                        <button class="btn btn-primary" type="button">
                            <span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span>
                            <span class="badge">8</span>
                        </button>
                        <button class="btn btn-warning" type="button">
                            <span class="glyphicon glyphicon-bell" aria-hidden="true"></span>
                            <span class="badge">1</span>
                        </button>
                    </form>
                </div>
                <div class="col-md-3 col-xs-4 text-right">
                    <form class="navbar-form">
                        <div>
                            <button class="btn btn-primary" type="button">
                                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                            </button>
                            <button class="btn btn-success" type="button">
                                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            </button>
                            <button class="btn btn-primary" type="button">
                                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                            </button>
                        </div><!-- /.col-lg-12 -->
                    </form>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Viz-a-technologies</p>
        </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <script>

        $('.filter-buttons').on('click', 'button', function () {
            var Filter = $(this).data('filter');
            if (Filter == "*") $(this).closest('.filter-content').find('.element-item').show();
            else {
                $(this).closest('.filter-content').find('.element-item').hide();
                $(this).closest('.filter-content').find(Filter).show();
            }
        });
    </script>

</body>
</html>

